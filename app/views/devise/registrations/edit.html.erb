<div class="form-container">
  <div class="card">
    <div class="form-item">
      <h2>アカウント情報編集</h2>

      <%= bootstrap_form_with(model: @user, url: registration_path(resource_name), local: true) do |f| %>
        <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>

        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control-sm" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control-sm" %>
        <%= f.file_field :image %>
        <hr>
        <div class="link-group">
          <div class="left">
            <%= f.submit "編集完了" %>
            <%= link_to "キャセル", :back, class: "btn" %>
          </div>
          <div class="right">
            <%= link_to "アカウント削除", registration_path(resource_name), class: "btn btn-danger", method: :delete, data: { turbo_confirm: "本当にアカウントを削除しますか?" } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
