<div class="detail-container">
  <div class="book-detail-container">
    <div class="book-detail">
      <div class="book-img">
        <%= image_tag @record.book[:thumbnail] %>
      </div>
      <hr>
      <h3 style="display:inline;">登録情報</h3>
      <div class="info">
        <p>タイトル: <%= @record.book[:title] %></p>
        <p>著者: <%= @record.book[:author] %></p>
        <p>出版社: <%= @record.book[:publisher] %></p>
        <p>出版日: <%= @record.book[:published_date] %></p>
        <p>ページ数: <%= @record.book[:page_count] %></p>
        <p>ISBN_10: <%= @record.book[:isbn_10] %></p>
        <p>ISBN_13: <%= @record.book[:isbn_13] %></p>
        <p>説明: <br><%= @record.book[:description] %></p>
      </div>
    </div>
  </div>

  <div class="reply-timeline-container">
    <div class="card reply-card" style="width: 30rem;">
      <div class="card-header reply-header">
        <%= link_to @record.book.user.name, @record.book.user %>
        <%= time_ago_in_words(@record.created_at) %>
      </div>
      <div class="card-body reply-body">
        <p><%= @record.content %></p>
        <div class="reply-footer">
          <%= @record.created_at.strftime("%m/%d %H:%M") %>
        </div>
      </div>
    </div>

    <div class="reply-form">
      <%= render 'replies/reply' %>
    </div>

    <div class="reply-timeline">
      <% @replies&.each do |reply| %>
        <div class="card reply-card" style="width: 30rem;">
          <div class="card-header reply-header">
            <%= reply.user.name %>
            <%= time_ago_in_words(reply.created_at) %>
          </div>
          <div class="card-body reply-body">
            <p><%= reply.comment %></p>
            <div class="reply-footer">
              <%= reply.created_at.strftime("%m/%d %H:%M") %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
