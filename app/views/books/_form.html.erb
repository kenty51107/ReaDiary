<%= turbo_frame_tag 'detail' do %>
  <%= form_with model: @book do |f| %>
  <h3 style="display:inline;">登録情報</h3>
  <%= f.submit '完了', class: 'btn btn-sm btn-outline-primary' %>
  <%= link_to 'キャンセル', book_path(@book) %>
  <ul>
    <li>
      <h5>タイトル : &nbsp</h5>
      <%= f.text_field :title, class: 'form-control detail-form' %>
    </li>
    <li>
      <h5>著者 : &nbsp</h5>
      <%= f.text_field :author, class: 'form-control detail-form' %>
    </li>
    <li>
      <h5>出版社 : &nbsp</h5>
      <%= f.text_field :publisher, class: 'form-control detail-form' %>
    </li>
    <li>
      <h5>発売日 : &nbsp</h5>
      <%= f.text_field :published_date, class: 'form-control detail-form' %>
    </li>
    <li>
      <h5>ページ数 : &nbsp</h5>
      <%= f.text_field :page_count, class: 'form-control detail-form' %>
    </li>
    <li>
      <h5>ISBN 10 : &nbsp</h5><span><%= @book.isbn_10 %></span>
    </li>
    <li>
      <h5>ISBN 13 : &nbsp</h5><span><%= @book.isbn_13 %></span>
    </li>
    <li id="book-info-desc">
      <h5>概要 : &nbsp</h5>
      <span><%= @book.description %></span>
    </li>
  </ul>
  <% end %>
<% end %>