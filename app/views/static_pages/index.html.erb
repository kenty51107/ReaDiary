<div class="toppage-container">
  <div class="top">
    <div class="top-content">
      <h1><%= link_to "ReaDiaryとは", "#" %></h1>
      <p>読書記録をつけて、読書を楽しもう</p>
      <div class="form-link">
        <%= link_to "アカウント登録", new_user_registration_path, class: "btn btn-success btn-sm" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-success btn-sm" %>
        <%= link_to "ゲストログイン", users_guest_sign_in_path, data: { turbo_method: :post }, class: "btn btn-success btn-sm" %>
      </div>
  </div>
</div>
<div class="ranking-container">
  <div class="card">
    <h5>登録数が多い書籍</h5>
    <div class="ranking-wrapper">
      <% @book_count&.each do |key, value| %>
        <div class="card ranking-item">
          <%= image_tag key[1], class: "ranking-item-img" %>
          <div class="card-body">
            <p><%= key[0] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>